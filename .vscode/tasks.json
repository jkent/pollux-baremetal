{
    "tasks": [
        {
            "type": "shell",
            "label": "build freertos-demo",
            "command": "export PATH=\"/opt/x-tools/arm-none-eabi/bin:$PATH\" && source ${workspaceFolder}/export.sh && make CONFIG_DEBUG=y",
            "options": {
                "cwd": "${workspaceFolder}/examples/freertos-demo"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "clean freertos-demo",
            "command": "source ${workspaceFolder}/export.sh && make clean",
            "options": {
                "cwd": "${workspaceFolder}/examples/freertos-demo"
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "reset target",
            "command": "${workspaceFolder}/tools/reset.py",
            "problemMatcher": []
        },
        {
            "label": "debug freertos-demo",
            "dependsOn": [
                "build freertos-demo",
                "reset target",
            ]
        }
    ],
    "version": "2.0.0"
}